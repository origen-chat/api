root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{js,jsx,ts,tsx,gql,graphql}]
indent_size = 2

[*.py]
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{json,yml,html}]
indent_size = 2

[nginx.conf]
indent_size = 2
